!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %title 
      = t('raushtitle')
      = '|' + Service.all.collect(&:title).join("|") #{@head.fetch(:title, '') if @head}    
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true 
    = stylesheet_link_tag    "print", media: "print"      
    = stylesheet_link_tag    "animate", media: "all"      
    = javascript_include_tag "application", "data-turbolinks-track" => true    
    
    = csrf_meta_tags
    %meta{:charset => "utf-8"}
    %meta{:name => "google-site-verification", :content => "S5JQSWa3HDMpXSLq99069pTnv9xEXj1SyOHhjeAVXWQ" }
    %meta{:name => "keywords", :content => ' راش, هوشمند سازی, طراحی وب, گرافیک, دوربین مداربسته' } 
    %meta{:name => "description", :content => "گروه مهندسی راش فعالیت هایی در زمینه کامپیوتر در شاخه های طراحی وب سایت ، طراحی گرافیک، نصب و راه اندازی شبکه، هوشمند سازی ساختمان, نصب دوربین"}
    %meta{content: "no", "http-equiv" => "imagetoolbar"}
    = favicon_link_tag 'favicon.png', :rel => 'shortcut icon'
  %body{style: "margin:0px"}
    .container-full{:id => I18n.locale}
      .row.mainmenu     
        = render "shared/nav_bar"
        - if is_admin?
          .admin-menu            
            = render "shared/admin_menu"
      .row.main-div
        = yield     
        
      .footer.row
        = render "shared/footer"
    
