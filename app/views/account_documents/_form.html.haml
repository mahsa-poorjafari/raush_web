= form_for @account_document do |f|
  - if @account_document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account_document.errors.count, "error")} prohibited this account_document from being saved:"
      %ul
        - @account_document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :payment_date
    = f.date_select :payment_date
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :paid_to
    = f.number_field :paid_to
  .field
    = f.label :paid_by
    = f.number_field :paid_by
  .field
    = f.label :payment_group_id
    = f.number_field :payment_group_id
  .field
    = f.label :physical_factor_number
    = f.text_field :physical_factor_number
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
