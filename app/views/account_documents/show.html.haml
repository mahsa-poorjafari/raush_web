.fa.set-center
  .btnw10.avoid-this.pull-right 
    %p#notice= notice
    = link_to (image_tag 'print.png'), '#', :id => "print"
    .pull-right= 'چاپ فاکتور'
    - if is_admin?
      = link_to 'Edit', edit_account_document_path(@account_document)
      \|
      = link_to 'Back', account_documents_path
  .show-factor.fa.pull-left.width80    
    .header
      .header-img.avoid-this= image_tag 'header-small.jpg'
      .header-date
        %p.fa
          %b.header-date-title.avoid-thisتاریخ پرداخت:
          .avoid-this= JalaliDate.new(@account_document.payment_date)
        %p.fa
          %b.header-date-title.avoid-this شماره فاکتور
          1234567
        %p.fa
          %b.header-date-title.avoid-this تاریخ ثبت فاکتور:
          .show-date= JalaliDate.new(@account_document.created_at)
        %p.fa
          %b.header-date-title.avoid-thisشماره فیزیکی فاکتور:
          .avoid-this= @account_document.physical_factor_number
        .clear-float
    .body-factor        
      %p.pull-right.fa
        %b مبلغ:
        = @account_document.value
      %p.pull-right.fa
        %b بابت:
        = @account_document.payment_group.title
      %p.pull-right.fa
        %b پرداخت به:
        = @paid_to.title
      %p.pull-right.fa
        %b پرداخت توسط:
        = @paid_by.title
      .clear-float      
          
      %p.fa
        %b توضیحات:
        = @account_document.description
    .factor_footer
      .footer-img= image_tag 'footer-small.jpg'
  
:javascript
  $('a#print').click(function(){
    $('body').css('position', 'absolute');
    window.print();
  });
