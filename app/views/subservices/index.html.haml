.fa.width80.set-center
  %h1 لیست زیرگروه ها
  .col-xs-4{:style=> "margin-top:10%"}
    = link_to 'زیرگروه جدید', new_subservice_path, :class => "btn btn-default"
  .col-xs-7
    %table.table
      %tr
        %th  عنوان
        %th  سرویس مربوطه
        %th
        

      - @subservices.each do |subservice|
        %tr        
          %td= subservice.title
          %td= subservice.service.title
          %td
            = link_to 'مشاهده', subservice
            \|
            = link_to 'ویرایش', edit_subservice_path(subservice)
            \|
            = link_to 'حذف', subservice, :method => :delete, :data => { :confirm => 'Are you sure?' }

  
