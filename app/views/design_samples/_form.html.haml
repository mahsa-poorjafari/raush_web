= form_for @design_sample do |f|
  - if @design_sample.errors.any?
    #error_explanation      
      %ul
        - @design_sample.errors.full_messages.each do |msg|
          %li= msg
  .col-xs-6.margin5
    .form-group
      = f.label :name
      = f.text_field :name
    .form-group
      = f.label :service, :class => "control-label"
      = f.select(:service_id, Service.find(:all).collect {|u| [u.title, u.id]}, :prompt => 'Select Service')      
    .form-group
      = f.label :website
      = f.text_area :website
    .form-group
      = f.label :description
      = f.text_area :description
    .form-group
      = f.label :date
      = f.date_select :date
    .form-group
      = f.submit 'ثبت', :class => "btn btn-info"
