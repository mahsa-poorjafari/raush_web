= form_for @service do |f|
  - if @service.errors.any?
    #error_explanation      
      %ul
        - @service.errors.each do |attr, msg|
          %li= msg
  .field-holder.set-center
    .form-group
      = f.label 'عنوان به انگلیسی:', :class => "control-label"
      = f.text_field :title_en, :class => "form-control"
    .form-group
      = f.label 'عنوان به فارسی:', :class => "control-label"
      = f.text_field :title_fa, :class => "form-control"
    .form-group
      = f.label 'توضیحات به انگلیسی:', :class => "control-label"
      = f.text_field :description_en, :class => "form-control"
    .form-group
      = f.label 'توضیحات به فارسی:', :class => "control-label"
      = f.text_field :description_fa, :class => "form-control"
    .form-group
      = f.label 'تصویر نمونه:', :class => "control-label"
      - if @service.image.present?
        = image_tag @service.image(:small)
      = f.file_field :image
    .form-group
      = f.submit 'ثبت', :class => "btn btn-default"
