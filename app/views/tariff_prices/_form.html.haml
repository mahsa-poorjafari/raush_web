= form_for @tariff_price do |f|
  - if @tariff_price.errors.any?
    #error_explanation     
      %ul
        - @tariff_price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :modual
    = f.text_area :modual
  .field
    = f.label :unit_price
    = f.text_field :unit_price
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'ثبت', :class => "btn btn-info"
