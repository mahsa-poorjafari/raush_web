= form_for @related_person ||= related_person, :remote => true do |f|
  - if @related_person.errors.any?
    #error_explanation
      
      %ul
        - @related_person.errors.full_messages.each do |msg|
          %li= msg
  .width80.margin5
    .form-group
      = f.label 'عنوان:', :class => "control-label"
      = f.text_field :title, :class => "form-control"
    .form-group
      = f.label 'توضیحات:', :class => "control-label"
      = f.text_area :description, :class => "form-control"
    .form-group
      = f.submit 'ثبت', :class => "btn btn-default"
