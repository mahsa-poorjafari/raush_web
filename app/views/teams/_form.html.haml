= nested_form_for @team, :html => { :multipart => true  } do |f|
  - if @team.errors.any?
    #error_explanation      
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg
  .col-xs-6.pull-right
    .field-holder.set-center
      .form-group
        = f.label "نام:", :class => "control-label"
        = f.text_field :name, :class => "form-control"
      .form-group
        = f.label "نام خانوادگی:", :class => "control-label"
        = f.text_field :last_name, :class => "form-control"
      .form-group
        = f.label "سمت:", :class => "control-label"
        = f.text_field :post, :class => "form-control"
      .form-group
        = f.label "تصویر:", :class => "control-label"
        = f.file_field :image
      .form-group
        = f.submit 'ثبت', :class => "btn btn-default"    
  .col-xs-6 
    .form-group
      = f.label "ترتیب قرار گرفتن تصویر فرد", :class => "control-label"
      %i= 'به ترتیب از چپ به راست - عدد کوچکتر اولیت نمایش بیشتر دارد.'
      = f.text_field :set_order, :class => "form-control"
    .form-group
      %p{:class => I18n.locale}= 'آیکن هر مهارت را از این کادر انتخاب کنید.'
      %p{ :style=> "color:#ec523f", :class => I18n.locale}= "دقت داشته باشید حجم هر عکس باید کمتر از ۵۰۰کیلوبایت باشد."
      = f.link_to_add content_tag(:span, "افزودن تصویر", :class => "btn btn-warning" ), :skills, :id => "add_new_picture", :class => "btn"  
    .col-xs-12 
      = f.fields_for :skills do |picture|  
        .col-xs-6
          = render "shared/upload_image_form", :picture => picture
  .col-xs-12
    .form-group.editor
      = f.label 'متن فارسی', :class => "control-label"
      = f.text_area :description_fa, :class => "ckeditor"
    .form-group.editor
      = f.label 'متن انگلیسی', :class => "control-label"
      = f.text_area :description_en, :class => "ckeditor"
