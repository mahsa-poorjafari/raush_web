= form_for @portfolio do |f|
  - if @portfolio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@portfolio.errors.count, "error")} prohibited this portfolio from being saved:"
      %ul
        - @portfolio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title_en
    = f.text_field :title_en
  .field
    = f.label :title_fa
    = f.text_field :title_fa
  .field
    = f.label :description_en
    = f.text_field :description_en
  .field
    = f.label :description_fa
    = f.text_field :description_fa
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :service_id
    = f.number_field :service_id
  .field
    = f.label :website
    = f.text_field :website
  .actions
    = f.submit 'Save'
